<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://typeOfExpenseEdit.caption"
        focusComponent="form">
    <data>
        <instance id="typeOfExpenseDc"
                  class="com.company.accountingofficeexpenses.entity.TypeOfExpense">
            <fetchPlan extends="_base">
                <property name="expenseType" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="expenseTypeDc" property="expenseType"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="typeOfExpenseDc">
                <column width="350px">
                    <textField id="titleTypeExpenseField" property="titleTypeExpense"/>
                    <textField id="descriptionTypeExpenseField" property="descriptionTypeExpense"/>
                    <textField id="limitSumEmployeeField" property="limitSumEmployee"/>
                </column>
            </form>
            <groupBox id="expenseTypeBox"
                      caption="msg://com.company.accountingofficeexpenses.entity/TypeOfExpense.expenseType">
                <table id="expenseTypeTable" dataContainer="expenseTypeDc" width="100%" height="200px">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="sumExpense"/>
                        <column id="dateOfExpense"/>
                        <column id="documentOfExpense"/>
                    </columns>
                    <buttonsPanel>
                        <button action="expenseTypeTable.create"/>
                        <button action="expenseTypeTable.edit"/>
                        <button action="expenseTypeTable.remove"/>
                    </buttonsPanel>
                </table>
            </groupBox>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
