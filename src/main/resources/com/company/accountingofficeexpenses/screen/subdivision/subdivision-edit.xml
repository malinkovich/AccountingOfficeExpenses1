<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://subdivisionEdit.caption"
        focusComponent="form">
    <data>
        <instance id="subdivisionDc"
                  class="com.company.accountingofficeexpenses.entity.Subdivision">
            <fetchPlan extends="_base">
                <property name="employeesSubdiv" fetchPlan="_base">
                    <property name="subdivEmployee" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader/>
            <collection id="employeesSubdivDc" property="employeesSubdiv"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="subdivisionDc">
            <column width="350px">
                <textField id="titleSubdivField" property="titleSubdiv"/>
                <textField id="descriptionSubdivField" property="descriptionSubdiv"/>
            </column>
        </form>
        <groupBox id="employeesSubdivBox"
                  caption="msg://com.company.accountingofficeexpenses.entity/Subdivision.employeesSubdiv">
            <table id="employeesSubdivTable" dataContainer="employeesSubdivDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="nameEmployee"/>
                    <column id="subdivEmployee"/>
                </columns>
                <buttonsPanel>
                    <button action="employeesSubdivTable.create"/>
                    <button action="employeesSubdivTable.edit"/>
                    <button action="employeesSubdivTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
